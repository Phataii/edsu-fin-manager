<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Funds Account Records</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
  <!-- Font Awesome for Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-blue-50 h-fit">

  <div class="flex h-fit">
      <!-- Sidebar -->    
        <%- include('partials/nav') %>

      <!-- Main Content -->
      <div class="flex-1 p-6 space-y-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="mb-3 p-3 bg-light border rounded">
              <h5 class="fw-bold"><%= bank.name %> - <%= bank.accountNumber %></h5>
              <p>Current Balance: <span id="debitBalance" class="fw-bold text-success">â‚¦<%= parseFloat(bank.currentBal).toLocaleString() %>.00</span></p>
            </div>
            
            <!-- Transaction Records Table -->
            <h5 class="fw-bold mb-3">Related Records</h5>
            <div class="table-responsive">
              <table id="transactionsTable" class="table table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>Date</th>
                    <th>Ref</th>
                    <th>Amount</th>
                    <th>Type</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% revenues.forEach(data=> { %>
                    <tr>
                      <td><%= data.transactionDate.toLocaleString() %></td>
                      <td><%= data.ref %></td>
                      <td><%= parseFloat(data.credit).toLocaleString() %>.00</td>
                      <td>Revenue</td>
                      <td>View</td>
                    </tr>
                  <%}); %>
                </tbody>
               
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

  <!-- Bootstrap and DataTables Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
  <script>
    $(document).ready(function() {
      $('#transactionsTable').DataTable();
    });
  </script>
</body>
</html>

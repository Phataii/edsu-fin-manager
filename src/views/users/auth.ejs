    <script>
        // Get references to key elements
const signInSection = document.getElementById("sign-in-section");
const signUpSection = document.getElementById("sign-up-section");
const infoHeading = document.getElementById("info-heading");
const infoText = document.getElementById("info-text");
const toggleButton = document.getElementById("toggle-button");

// Toggle between Sign In and Sign Up sections
toggleButton.addEventListener("click", () => {
    if (signInSection.classList.contains("hidden")) {
        // Show Sign In and update the left panel
        signInSection.classList.remove("hidden");
        signUpSection.classList.add("hidden");
        infoHeading.textContent = "Welcome Back!";
        infoText.textContent = "Sign in to.";
        toggleButton.textContent = "Sign Up";
    } else {
        // Show Sign Up and update the left panel
        signUpSection.classList.remove("hidden");
        signInSection.classList.add("hidden");
        infoHeading.textContent = "Hello, Friend!";
        infoText.textContent = "Sign up.";
        toggleButton.textContent = "Sign In";
    }
});
    </script>

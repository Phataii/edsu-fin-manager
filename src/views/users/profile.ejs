<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Page</title>

  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/alpinejs" defer></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
  <style>
    .dataTables_wrapper .dataTables_paginate .paginate_button {
      padding: 0.5rem 1rem;
      margin: 0;
    }
  </style>
<body class="bg-blue-50 h-screen">

  <!-- Dashboard Layout -->
  <div class="flex h-fit">
    <!-- Sidebar -->
    <%- include('../partials/nav') %>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col">
      <!-- Top Bar -->
      <header class="bg-blue-100 shadow flex items-center justify-between px-6 py-4">
        <h2 class="text-xl font-semibold text-blue-800">User Profile</h2>
        <!-- <div class="flex items-center space-x-4">
          <input type="text" placeholder="Search..." class="px-4 py-2 rounded border-gray-300">
          <img src="https://via.placeholder.com/40" alt="User Avatar" class="w-10 h-10 rounded-full">
        </div> -->
      </header>

      <!-- Main Dashboard -->
      <main class="flex-1 p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Profile Info Card -->
          <div class="bg-white shadow p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-blue-800 mb-4">Profile Information</h3>
            <p><strong>Name:</strong> <%= user.firstName%> <%= user.lastName%></p>
            <p><strong>Email:</strong> <%= user.email%></p>
          </div>

          <!-- Change Password Card -->
          <div class="bg-white shadow p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-blue-800 mb-4">Change Password</h3>
            <form id="changePasswordForm" class="space-y-4">
              <div>
                <label for="currentPassword" class="block text-sm font-medium text-gray-700">Current Password</label>
                <input type="password" id="currentPassword" class="w-full p-2 border border-gray-300 rounded-lg" required>
              </div>
              <div>
                <label for="newPassword" class="block text-sm font-medium text-gray-700">New Password</label>
                <input type="password" id="newPassword" class="w-full p-2 border border-gray-300 rounded-lg" required>
              </div>
              <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg w-full">Update Password</button>
            </form>
          </div>

          <!-- Reset Everything Card -->
          <div class="bg-white shadow p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-blue-800 mb-4">Reset Everything</h3>
            <p class="text-sm text-gray-600 mb-4">This will set all your settings back to zero.</p>
            <button id="resetButton" class="bg-red-600 text-white px-4 py-2 rounded-lg w-full">Reset Now</button>
          </div>
        </div>
      
      </main>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    // Handle Change Password
    document.getElementById('changePasswordForm').addEventListener('submit', (e) => {
      e.preventDefault();
      alert('Password updated successfully!');
    });

    // Handle Reset
    document.getElementById('resetButton').addEventListener('click', () => {
      if (confirm('Are you sure you want to reset everything?')) {
        alert('All settings have been reset to zero.');
      }
    });
  </script>

</body>

</html>
